<h2>User details</h2>
<dl class="dl-horizontal">
  <dt><strong>Full Name:</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user_stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>
<% end %>

<%= link_to "Back", my_friends_path, class: 'btn btn-primary' %>
<% if current_user.not_friends_with?(@user) %>
  <%= link_to "Add as my friend", add_friend_path(user: current_user, friend: @user), method: :post,
    class: "btn btn-info" %>
<% else %>
  <%= link_to "Remove friend", friendship_path(@user), method: :delete,
    data: {confirm: "Are you sure?"}, class: "btn btn-warning" %>
<% end %>